    {
      "label": "Git: Commit, Pull & Push",
      "type": "shell",
      "command": "git add .; git commit -m 'Auto deploy $(Get-Date -Format \"yyyy-MM-dd HH:mm:ss\")'; git pull --rebase origin master; git push",
      "problemMatcher": []
    }
  ]
}
